---
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/nav-bar.astro";
import Link from "../components/link.astro";
import { Block } from "../components/containers";
import {
	ExperienceSection,
	ProjectsSection,
	ContactSection,
} from "../components/sections";
---

<Layout title="Dikson Portfolio Web" class="bg-background text-txt fill-txt">
	<NavBar />
	<main class="text-on-background" id="home">
		<section
			class="app-row--center justify-around gap-6 flex-1 w-full md:w-[90%] mx-auto h-screen px-6"
		>
			<header class="flex-1">
				<h1 class="text-5xl font-bold">
					Hi there, <br />
					<span class="text-primary"> I'ts Dikson Aranda </span>
				</h1>
				<p class="app-text-soft mt-3 mb-6 w-[90%]">
					Welcome to my personal website. I'm Dikson Aranda, a passionate web
					developer with 2 year of work experience creating software to gring a
					better experience for the users
				</p>
				<button class="app-button--primary app-button--sm">
					Let's discuss {"->"}
				</button>
			</header>
			<div
				class="principal-image bg-orange-200 hidden md:block flex-[0.7] relative"
			>
				<img
					src="https://img.freepik.com/psd-premium/retrato-sonriente-hombre-dibujos-animados-3d-aislado-sobre-fondo-transparente-png-psd_888962-1570.jpg?semt=ais_hybrid"
					alt="avatar-dikson"
				/>
			</div>
		</section>
		<ExperienceSection />
		<ProjectsSection />
		<ContactSection />
		<footer class="mt-14 px-6 py-4 border-t border-neutral-300 mx-4 pt-8">
			<div class="flex flex-row gap-8 justify-between">
				<Block title="Dikson Aranda" contentType="desc" class="mb-5">
					Full-stack developer passionate about creating elegant solutions to
					complex problems.
				</Block>
				<div>
					<Block
						title="Quick links"
						contentType="list"
						class="mb-5"
						contentClass="flex-row-base gap-2"
					>
						<li>
							<Link href="#home" label="Home" />
						</li>
						<li>
							<Link href="#experience" label="Experience" />
						</li>
						<li>
							<Link href="#projects" label="Projects" />
						</li>
					</Block>
					<Block
						title="Connect with me"
						contentType="list"
						contentClass="flex-row-base gap-2"
					>
						<li>
							<Link href="https://www.github.com/DreckSallow" label="Github" />
						</li>
						<li>
							<Link
								href="https://www.linkedin.com/in/dikson-aranda/"
								label="Linkedin"
							/>
						</li>
						<li>
							<Link href="mailto:diksonaranda.cabrera@gmail.com" label="Mail" />
						</li>
					</Block>
				</div>
			</div>
			<span class="text-center w-full block mt-4">
				Â© {new Date().getFullYear()} Dikson Aranda. All rights reserved.
			</span>
		</footer>
	</main>
</Layout>

<style>
	.principal-image::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		background-color: rgba(var(--color-primary));
		height: 30%;
		width: 30%;
		z-index: -1;
		filter: blur(80px);
	}

	.principal-image::after {
		content: "";
		position: absolute;
		bottom: 0;
		right: 0;
		background-color: rgba(var(--color-primary));
		height: 30%;
		width: 30%;
		z-index: -1;
		filter: blur(80px);
	}
</style>
